<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<title>WASFA - login/signup</title>
	<link rel="stylesheet" href="/public/css/login.css">

</head>

<body>
	<!-- partial:index.partial.html -->
	<div class="form-structor">
		<div class="signup">
			<h2 class="form-title" id="signup"><span>or</span>Sign up</h2>
			<form method="post" action="submit">
			<div class="form-holder">
				<input id="nom" type="text" name="Nom" class="input" placeholder="Nom " />
				<input id="prenom" type="text" name="Prenom" class="input" placeholder="Prenom" />
				<input id="address" type="text" name="Address" class="input" placeholder="Address" />
				<input id="age" type="text" name="Age" class="input" placeholder="Age" />
				<input id="genre" type="text" name="Genre" class="input" placeholder="Genre" />
				<input id="email" type="email" name="Email" class="input" placeholder="Email" />
				<input id="password" type="password" name="pwd" class="input" placeholder="Password" />
				<!-- <input id="password2" type="password" class="input" placeholder="repeat Password" /> -->
			</div>
			<button id="sign-up" class="submit-btn">Sign up</button>
			</form>
		</div>
		<div class="login slide-up">
			<div class="center">
				<h2 class="form-title" id="login"><span>or</span>Log in</h2>
				<form action="auth" method="POST">
					<div class="form-holder">
						<input type="email" name="email" class="input" placeholder="Email" />
						<input type="password" name="password" class="input" placeholder="Password" />
					</div>
					<button id="sign-in" class="submit-btn">Log in</button>
				</form>
			</div>
		</div>
	</div>
	<!-- partial -->
	<script src="/public/js/login.js"></script>
</body>

</html>